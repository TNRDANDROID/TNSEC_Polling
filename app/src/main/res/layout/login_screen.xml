<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.nic.tnsecPollingPersonnel.activity.LoginScreen" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/new_bg1">
            <ImageView
                android:id="@+id/ivIlls"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/app_logo" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/dpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tamil Nadu State Election Commission"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                customfontdemo:fontName="@string/font_circular_medium" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/dpt_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Local Body Election 2021"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                customfontdemo:fontName="@string/font_circular_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            android:background="@drawable/cornered_bg_circle_top"
            android:layout_marginTop="-50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative1">

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="20dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:id="@+id/ivItemOne"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal">


                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <com.google.android.material.textfield.TextInputLayout
                                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    app:hintEnabled="false"
                                                    android:id="@+id/userNameTXINP"
                                                    android:background="@color/white"
                                                    app:boxStrokeColor="@color/white"
                                                    android:layout_toRightOf="@+id/user_img"
                                                    app:boxStrokeWidth="0dp"
                                                    app:boxStrokeWidthFocused="0dp"
                                                    app:boxBackgroundColor="@color/full_transparent"
                                                    android:padding="0dp"
                                                    android:hint="Username">

                                                    <com.google.android.material.textfield.TextInputEditText
                                                        android:id="@+id/username"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="40dp"
                                                        android:background="@color/full_transparent"
                                                        android:inputType="textPersonName"
                                                        android:padding="10dp"
                                                        android:hint="Username"
                                                        />

                                                </com.google.android.material.textfield.TextInputLayout>



                                                <ImageView
                                                    android:id="@+id/user_img"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentStart="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="5dp"
                                                    android:tint="@color/colorPrimary"
                                                    android:src="@drawable/usernamebg" />


                                            </RelativeLayout>

                                        </LinearLayout>
                                        <View
                                            android:layout_below="@+id/user_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#CACDCD"></View>


                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="30dp"
                                        android:layout_marginTop="20dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:id="@+id/ivItemTwo"
                                            android:layout_below="@+id/ivItemOne"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal">


                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <com.google.android.material.textfield.TextInputLayout
                                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    app:endIconMode="password_toggle"
                                                    android:hint="password"
                                                    android:layout_toRightOf="@+id/pswd_img"
                                                    app:hintEnabled="false"
                                                    android:background="@color/white"
                                                    app:boxStrokeColor="@color/white"
                                                    app:boxStrokeWidth="0dp"
                                                    app:boxStrokeWidthFocused="0dp"
                                                    app:boxBackgroundColor="@color/full_transparent"
                                                    android:padding="0dp"
                                                    android:textColor="@android:color/black">

                                                    <com.google.android.material.textfield.TextInputEditText
                                                        android:id="@+id/password"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="40dp"
                                                        android:background="@color/full_transparent"
                                                        android:padding="10dp"
                                                        android:longClickable="false"
                                                        android:hint="Password"
                                                        android:inputType="textPassword"/>

                                                </com.google.android.material.textfield.TextInputLayout>
                                                <ImageView
                                                    android:id="@+id/pswd_img"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentStart="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="5dp"
                                                    android:tint="@color/colorPrimary"
                                                    android:src="@drawable/userpasswordbg" />


                                            </RelativeLayout>


                                        </LinearLayout>

                                        <View
                                            android:layout_below="@+id/user_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#CACDCD"></View>

                                    </LinearLayout>


                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBuy"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/relative1"
                    android:background="@drawable/button_background"
                    android:visibility="visible"
                    android:onClick="@{()-> activity.checkLoginScreen()}"
                    android:text="Login"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="@android:color/transparent"
        android:id="@+id/below_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:id="@+id/tv_version_nic_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_version_number"
                style="@style/font_poppins_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 1"
                android:textAlignment="center"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_version_number"
                android:id="@+id/nic_name"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:layout_centerVertical="true"
                style="@style/font_poppins_semibold"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sofware Designed &amp; Developed by NIC"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
</layout>