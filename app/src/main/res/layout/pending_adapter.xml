<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.nic.tnsecPollingPersonnel.adapter.PendingAdapter" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background6"
                android:id="@+id/left3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/polling_station_no"
                    android:text="Polling Station No : 345345"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/cornered_border_bg_strong_bottom"
                android:layout_below="@+id/left3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="0dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Name : "
                                        android:textColor="@color/grey2"
                                        android:textSize="@dimen/_15sdp"
                                        android:visibility="visible" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/polling_booth_name"
                                        android:text="polling_booth_name"
                                        android:textColor="@color/grey2"
                                        android:textSize="@dimen/_15sdp"
                                        android:visibility="visible" />
                                </LinearLayout>
                                <RelativeLayout
                                    android:id="@+id/status_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Status : "
                                        android:layout_centerVertical="true"
                                        android:id="@+id/status"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_15sdp"
                                        android:visibility="visible"
                                        style="@string/font_circular_medium" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Yes"
                                        android:layout_toRightOf="@+id/status"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/status_val"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_15sdp"
                                        android:visibility="visible"
                                        style="@string/font_circular_medium" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/remark_layout"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/status_layout"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:text="Remark : "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_15sdp"
                                        android:visibility="gone"
                                        style="@string/font_circular_medium" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:background="@drawable/cornered_border_bg_strong"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <TextView
                                            android:id="@+id/remark"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="15dp"
                                            android:padding="@dimen/_5sdp"
                                            android:maxLines="5"
                                            android:singleLine="false"
                                            android:background="@android:color/transparent"
                                            android:text="Remark"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/_15sdp"
                                            style="@string/font_circular_book" />


                                    </RelativeLayout>


                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_shadow"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/activity_spinner_layout"
                                android:id="@+id/go"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"/>


                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>